{
  "AppConfig": {
    "PathToLogs": "/var/log",           // Directory where all the log files are
    "DefaultNumberOfLogsToReturn": -1,  // Maximum number of logs to return from the API if number not provided
    "Encoding": "UTF-8"                 // Encoding of log files that will be read
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",               // Can be set to Fatal, Information, Warning, Error, Debug, or Verbose
      "Override": {
        "Microsoft": "Warning",
        "System.Net": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
